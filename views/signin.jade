extends layout

block content
  .header
    .header-bottom
      .container
        .logo
          a.img-responsive(href='/')
            h1 ItrBlog
        .head-nav
          span.menu
          ul.cl-effect-3
            li.active
              a(href='/') Home
            li
              a(href='/search') Search
            li
              a(href='/posts') Publications
            .clearfix
          // script-for-nav
          script.
            $( "span.menu" ).click(function() {
              $( ".head-nav ul" ).slideToggle(300, function() {
                // Animation complete.
              });
            });
          // script-for-nav
        | &#x9;&#x9;&#x9;&#x9;&#x9;
        .header-right1
          - if(user) {
          li
            a(href='/profile/#{user.username}') #{user.username}
          li
            a(href='/signout') Sign Out
          - } else {
          li
            a(href='/signin') Sign In
          li
            a(href='/signup') Sign Up
          - }
        .clearfix
  // header
  // login
  .login-page
    .container
      .account_grid
        .col-md-6.login-left.wow.fadeInLeft(data-wow-delay='0.4s')
          h3 NEW CUSTOMERS
          | &#x9;&#x9;&#x9;&#x9;&#x9;
          p
            | By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.
          | &#x9;&#x9;&#x9;&#x9;&#x9;
          a.acount-btn(href='register.html') Create an Account
        | &#x9;&#x9;&#x9;
        .col-md-6.login-right.wow.fadeInRight(data-wow-delay='0.4s')
          h3 REGISTERED CUSTOMERS
          | &#x9;&#x9;&#x9;&#x9;&#x9;
          p If you have an account with us, please log in.
          | &#x9;&#x9;&#x9;&#x9;&#x9;
          form(action='/login', method='POST')
            div
              span
                | Login
                label *
              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
              input(type='text', name='username', placeholder='Login', required='', autofocus='')
            | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
            div
              span
                | Password
                label *
              | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
              input(type='password', name='password', placeholder='Password', required='')
            | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;
            input(type='submit', value='Sign In')
            .auth
              a.btn.btn-facebook(href='auth/facebook')
                i.fa.fa-facebook.social-icons   Facebook
              a.btn.btn-twitter(href='auth/twitter')
                i.fa.fa-twitter.social-icons   Twitter
              a.btn.btn-vk(href='auth/vkontakte')
                i.fa.fa-vk.social-icons   VK

        | &#x9;
        | &#x9;&#x9;&#x9;&#x9;
        .clearfix
          #message
            h1.text-center.error-message #{message}
  // login
  // footer-bottom
  .footer-bottom
    .container
      p
        | Copyrights &copy; 2015
  // footer-bottom
