extends layout

block content
    .header
        .header-bottom
            .container
                .logo
                    a.img-responsive(href='/')
                        h1 ItrBlog
                .head-nav
                    span.menu
                        ul.cl-effect-3
                            li.active
                                a(href='/') Home
                            li
                                a(href='/search') Search
                            li
                                a(href='/posts') Publications
                            .clearfix
                .header-right1
                    - if(user) {
                    li
                        a(href='/profile/#{user.username}') #{user.username}
                    li
                        a(href='/signout') Sign Out
                    - } else {
                    li
                        a(href='/signin') Sign In
                    li
                        a(href='/signup') Sign Up
                    - }
                .clearfix
    .main
        .mission
            .container
                .panel.panel-info
                    .panel-heading
                        h4.panel-title User Profile
                    .panel-body
                        .row
                            .col-md-3.col-lg-3(align='center')
                                img.img-circle.img-responsive(alt='User Pic', src='#{user.avatar}')
                            .col-md-9.col-lg-9
                                table.table.table-user-information
                                    tbody
                                        tr
                                            td First Name:
                                            td #{user.firstName}
                                        tr
                                            td Last Name:
                                            td #{user.lastName}
                                        tr
                                            td Shortly about:
                                            td #{user.shortly}
                                        tr
                                            td Interests:
                                            td #{user.interests}
                                        tr
                                            td email
                                            td #{user.email}
                    .panel-footer
                        a.btn.btn-sm.btn-primary#templates-toggle(type='button')
                            i.fa.fa-plus
                        span.pull-right
                            a.btn.btn-sm.btn-warning(href='/edit-settings' type='button')
                                i.fa.fa-pencil-square-o
                .recnt#templates(style="display: none;")
                    .container
                        h3 Publication templates
