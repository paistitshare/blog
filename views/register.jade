extends layout

block content
    .header
        .header-bottom
            .container
                .logo
                    h2.img-responsive Blog
                .head-nav
                    span.menu
                    ul.cl-effect-3
                        li
                            a(href='/') Home
                        li
                            a(href=' ') About us
                        li
                            a(href=' /posts') Blog
                        li
                            a(href=' ') Contact
                        .clearfix
                    script.
                        $( "span.menu" ).click(function() {
                            $( ".head-nav ul" ).slideToggle(300, function() {
                            });
                        });
                .header-right1
                    - if(user) {
                    li
                        a(href='/profile/#{user.username}') #{user.username}
                    li
                        a(href='/signout') Sign Out
                    - } else {
                    li
                        a(href='/signin') Sign In
                    li
                        a(href='/signup') Sign Up
                    - }
                .clearfix
    .main-1
        .container
            .register
                form(action='/signup', method='POST')
                    .register-top-grid
                        h3 PERSONAL INFORMATION
                        .wow.fadeInLeft(data-wow-delay='0.4s')
                            span
                                | Login
                                label *
                            input(type='text', name='username', placeholder='Login', required='', autofocus='')
                        .wow.fadeInRight(data-wow-delay='0.4s')
                            span
                                | First Name
                                label *
                            input(type='text', name='firstName', placeholder='Name', required='')
                        .wow.fadeInLeft(data-wow-delay='0.4s')
                            span
                                | Email Address
                                label *
                            input(type='email', name='email', placeholder='e-mail', required='')
                        .wow.fadeInRight(data-wow-delay='0.4s')
                            span
                                | Last Name
                                label *
                            input(type='text', name='lastName', placeholder='Last Name', required='')
                        .clearfix
                    .register-bottom-grid
                        .wow(data-wow-delay='0.4s')
                            span
                                | Password
                                label *
                            input(type='password', name='password', placeholder='Password', required='')
                    .register-but
                        input(type='submit', value='Sign up')
                        .clearfix
                            #message
                                if message
                                    h1.text-center.error-message #{message}
    .footer-bottom
        .container
            p
                | Copyrights &copy; 2015